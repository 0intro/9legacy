#!/bin/rc

echo -n 'Halting file systems...'

if(ps | grep -s ' venti$')
	venti/sync -h tcp!127.0.0.1!17034
if(ps | grep -s ' fossil$'){
	echo fsys all halt >>/srv/fscons
	slay fossil|rc
}

echo done
echo
echo Remember to take the install disk out of the drive.
echo Feel free to turn off your computer.
while()
	sleep 3600

